page {
  background-color: #f5f5f5;
}

.hero-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #0c68c9 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  color: #fff;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 48rpx;
}

.info .name {
  font-size: 34rpx;
  font-weight: 700;
}

.actions {
  margin-top: 24rpx;
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  border: 1rpx solid #d9d9d9;
  background: #fff;
  color: #333;
  font-size: 28rpx;
}

.btn.primary {
  background: #1890ff;
  color: #fff;
  border: none;
}
