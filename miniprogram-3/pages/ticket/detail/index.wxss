page {
  background: #f5f5f5;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

.ticket-detail-page {
  min-height: 100vh;
}

/* 顶部导航栏 */
.detail-header {
  background: #fff;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header-back {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 64rpx;
  color: #333;
  line-height: 1;
  font-weight: 300;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-placeholder {
  width: 80rpx;
}

/* 出发地和目的地 */
.route-info {
  background: #fff;
  margin-top: 16rpx;
  padding: 40rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.route-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.route-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.route-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.route-swap {
  width: 80rpx;
  height: 80rpx;
  background: #f0f7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 32rpx;
}

.swap-icon {
  font-size: 40rpx;
  color: #1890ff;
  line-height: 1;
}

/* 日期选择 */
.date-section {
  background: #fff;
  margin-top: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-display {
  display: flex;
  flex-direction: column;
}

.date-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.date-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.date-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1;
}

.date-btn::after {
  border: none;
}

/* 警告提示 */
.alert-banner {
  background: #fff7e6;
  border-left: 4rpx solid #faad14;
  margin-top: 16rpx;
  padding: 24rpx;
}

.alert-text {
  font-size: 26rpx;
  color: #faad14;
}

/* 车票列表 */
.ticket-list {
  margin-top: 16rpx;
  padding: 0 24rpx;
}

.ticket-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.ticket-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.time-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-value {
  font-size: 48rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.time-label {
  font-size: 24rpx;
  color: #666;
}

.time-arrow {
  font-size: 32rpx;
  color: #1890ff;
  margin: 0 24rpx;
}

.ticket-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.ticket-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.buy-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1;
}

.buy-btn::after {
  border: none;
}

/* 底部客服电话 */
.service-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.service-phone-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #f0f7ff;
  border-radius: 16rpx;
}

.phone-icon {
  font-size: 48rpx;
  line-height: 1;
}

.service-text {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 日期选择器弹窗 */
.date-picker-popup {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  font-size: 28rpx;
  color: #1890ff;
}

.picker-content {
  padding: 32rpx 24rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

