page {
  background: #fff;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: env(safe-area-inset-top);
}

.ticket-detail-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fff;
}

/* 顶部导航栏 */
.detail-header {
  background: transparent;
  backdrop-filter: blur(10rpx);
  height: calc(88rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: env(safe-area-inset-top) 24rpx 0 24rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: background 0.3s;
}

.detail-header:has(.header-tabs.show) {
  background: rgba(255, 255, 255, 0.95);
}

/* 兼容处理：当显示标签时改变背景 */
.detail-header.with-tabs {
  background: rgba(255, 255, 255, 0.95);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.header-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

/* 顶部标签按钮 */
.header-tabs {
  display: flex;
  align-items: center;
  gap: 48rpx;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  pointer-events: none;
  z-index: 10;
  min-width: 200rpx;
}

.header-tabs.show {
  opacity: 1 !important;
  visibility: visible !important;
  pointer-events: auto !important;
}

.header-tab {
  position: relative;
  padding: 8rpx 0;
}

.header-tab-text {
  font-size: 28rpx;
  color: #333;
  transition: color 0.3s;
}

.header-tab.active .header-tab-text {
  color: #1890ff;
  font-weight: 500;
}

.header-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.header-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  font-size: 48rpx;
  color: #333;
  line-height: 1;
  font-weight: 300;
}

.menu-icon {
  font-size: 36rpx;
  color: #333;
  line-height: 1;
}

.more-icon {
  font-size: 36rpx;
  color: #333;
  line-height: 1;
  transform: rotate(90deg);
}

/* 滚动内容区域 */
.scroll-content {
  flex: 1;
  margin-top: calc(88rpx + env(safe-area-inset-top));
  padding-bottom: 120rpx;
}

/* 产品图片区域 */
.product-image-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-swiper {
  width: 100%;
  height: 100%;
}

.product-image-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-image {
  width: 400rpx;
  height: 400rpx;
}

/* 公交图标占位 */
.bus-icon {
  font-size: 300rpx;
  color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

/* 价格信息 */
.price-section {
  padding: 24rpx 32rpx;
}

.price-text {
  font-size: 48rpx;
  color: #ff4d4f;
  font-weight: 600;
}

/* 路线信息 */
.route-section {
  padding: 0 32rpx 24rpx;
}

.route-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.route-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.share-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-icon {
  font-size: 32rpx;
  color: #666;
}

.product-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.info-text {
  font-size: 24rpx;
  color: #999;
}

.service-icon-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
}

.service-icon {
  font-size: 32rpx;
}

/* 选择区域 */
.selection-section {
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.selection-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.selection-label {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.spec-preview {
  display: flex;
  gap: 8rpx;
}

.spec-icon {
  font-size: 32rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spec-count {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  font-size: 32rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 内容标签 */
.content-tabs {
  display: flex;
  background: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  background: #f5f5f5;
  border-bottom: 4rpx solid transparent;
}

.tab-item.active {
  background: #fff;
  border-bottom-color: #1890ff;
}

.tab-text {
  font-size: 28rpx;
  color: #333;
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

/* 标签内容区域 */
.tab-content {
  min-height: 400rpx;
  padding: 32rpx;
  background: #fff;
}

.intro-text,
.info-text-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部导航栏 */
.bottom-nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  height: 120rpx;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  gap: 8rpx;
}

.nav-icon {
  font-size: 40rpx;
}

.nav-text {
  font-size: 20rpx;
  color: #666;
}

.buy-now-btn {
  flex: 1;
  height: 80rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-now-btn::after {
  border: none;
}

/* 规格选择弹窗 */
.spec-picker-popup {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 60vh;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  font-size: 28rpx;
  color: #1890ff;
}

.spec-options {
  padding: 24rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.spec-option-item {
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.spec-option-item.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.spec-option-text {
  font-size: 28rpx;
  color: #333;
}

/* 日期选择器弹窗 */
.date-picker-popup {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.picker-content {
  padding: 32rpx 24rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

/* 详情区域 */
.detail-section {
  padding: 32rpx;
  background: #fff;
}

.info-box {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
}

.red-box {
  background: #fff1f0;
}

.blue-box {
  background: #e6f7ff;
}

.info-box-left-line {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #ff4d4f;
  border-radius: 0 3rpx 3rpx 0;
}

.blue-box .info-box-left-line {
  background: #1890ff;
}

.info-box-content {
  flex: 1;
  margin-left: 16rpx;
}

.info-box-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
}

.info-box-highlight {
  font-size: 26rpx;
  color: #ff4d4f;
  line-height: 1.8;
}

.service-icon-btn-inline {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.service-icon-inline {
  font-size: 36rpx;
}

.detail-item {
  margin-bottom: 16rpx;
  display: flex;
  align-items: flex-start;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.6;
}
