.ticket-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.ticket-card__icon {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #f0f7ff;
  border-radius: 50%;
}

.ticket-icon {
  font-size: 48rpx;
  line-height: 1;
}

.ticket-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.ticket-card__route {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.ticket-card__price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

